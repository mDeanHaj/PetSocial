<%- include("partials/adminHeader.ejs") %>

<div class="center-table">
    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.name %></td>
            <td><%= user.lastname %></td>
            <td><%= user.role %></td>
            <td>
              <a href="/edit/user?user_id=<%= user.user_id %>" class="action-link">Edit</a> |
              <a href="/delete/user?user_id=<%= user.user_id %>" class="action-link" onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
</div>

<%- include("partials/footer.ejs") %>

</body>
</html>
